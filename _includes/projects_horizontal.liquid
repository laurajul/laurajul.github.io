<div class="col mb-4">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable project-card" data-video="{{ project.video }}">
      <div class="row">
        
        {% if project.video and project.poster %}
          <div class="col-md-6">
            <video class="project-video card-img"
                   muted
                   preload="auto"
                   loop
                   playsinline
                   poster="{{ project.poster | relative_url }}">
              <source src="{{ project.video | relative_url }}" type="video/webm">
              Your browser does not support the video tag.
            </video>
          </div>
        {% elsif project.img %}
          <div class="col-md-6">
            {%
              include figure.liquid
              loading="eager"
              path=project.img
              sizes="(min-width: 768px) 156px, 50vw"
              alt="project thumbnail"
              class="card-img"
            %}
          </div>
        {% endif %}

        <div class="{% if project.img or project.video %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ project.title }}</h3>
            
            {% if project.date %}
              <p class="card-text text-muted">{{ project.date | date: "%Y" }}</p>
            {% endif %}
            <p class="card-text">{{ project.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if project.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if project.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ project.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>